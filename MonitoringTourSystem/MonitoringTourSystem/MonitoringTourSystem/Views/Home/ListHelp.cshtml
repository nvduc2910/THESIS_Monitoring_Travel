@model MonitoringTourSystem.ViewModel.HomeViewModel

@{
    if (Model == null || Model.ListHelpWithTourInfo == null || Model.ListHelpWithTourInfo.Count == 0)
    {
        <div class="alert alert-info" style="margin-top: 20px; margin-left: 20px; margin-right: 20px;">
            Không có tro giup nào.
        </div>
    }
    else
    {
        foreach (var item in Model.ListHelpWithTourInfo)
        {
            <ul class="list-tour" id="nav-accordion">
                <li class="sub-menu">
                    <a onclick="selectMarkerWarning(@item.Help.help_id);" href="javascript:;">
                        <h4 style="color: black; font-size: 14px;">@item.Help.help_content</h4>
                        <span style="font-size: 12px;">@item.TourInfo.tour_name</span>
                    </a>
                </li>
            </ul>
        }
    }
}

